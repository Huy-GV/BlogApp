@page
@model BlogApp.Pages.Blogs.IndexModel
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Index";
    ViewData["CSSLink"] = "/css/index.css";
    ViewData["Shared"] = "/css/shared.css";
    ViewData["Script"] = "#";
}

<main class="blog-container">
    @foreach (var blog in Model.Blog)
    {
        <a class="blog" asp-page="/Blogs/Read" 
                        asp-route-id="@blog.ID">
            <img src="/images/@blog.ImagePath">
            <div class="blog-info">
                <span class="info">@blog.Author</span>
                <span class="info">@blog.Date.ToString("dd MMM yyyy")</span>
                <p class="title">@blog.Title</p>
            </div>
        </a>
    }
</main>