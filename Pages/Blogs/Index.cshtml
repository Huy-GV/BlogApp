@page
@model BlogApp.Pages.Blogs.IndexModel
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager


@{
    ViewData["Title"] = "Index";
    ViewData["CSSLink"] = "/css/index.css";
    ViewData["Shared"] = "/css/shared.css";

    ViewData["Script"] = "#";
}
<div class="add-button-container">
    <a class="add-button" asp-page="/Blogs/CreateBlog">Make a post!</a>
</div>

<div class="blog-container">
    @foreach (var blog in Model.Blog)
    {
        <div class="blog">
            <p class="title">@blog.Title</p>
            <hr>
            <div class="blog-info">
                <p class='author'>@blog.Author</p>
                <p class="date">@blog.Date</p>
                @if (blog.IsHidden)
                {
                    <p class="suspended-post">@blog.SuspensionExplanation</p>
                }
                <div class="blog-button-container">
                    <a class="blog-button" 
                        asp-page="./Blog" 
                        asp-route-id="@blog.ID">See more (@blog.Comments.Count comments)</a>
                </div>
            </div>
        </div>
    }
</div>