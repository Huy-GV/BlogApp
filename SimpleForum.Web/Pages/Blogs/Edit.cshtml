@page
@model EditModel

@{
    ViewData["Title"] = "Edit Blog";
    ViewData["CSSLink"] = "/css/blogs/createblog.css";
    ViewData["Shared"] = "/css/shared.css";
}

<form class="add-form" method="post" asp-page-handler="EditBlog" enctype="multipart/form-data">
    <div class="form-inputs">
        <label asp-for="EditBlogViewModel.Title">Title</label>
        <input type="text" name="EditBlogViewModel.Title" required value="@Model.EditBlogViewModel.Title">
        <span asp-validation-for="EditBlogViewModel.Title" class="error-message"></span>

        <label asp-for="EditBlogViewModel.Introduction">Description</label>
        <textarea rows="8" cols="50"
                  name="EditBlogViewModel.Introduction"
                required>@Model.EditBlogViewModel.Introduction</textarea>
        <span asp-validation-for="EditBlogViewModel.Introduction" class="error-message"></span>

        <label asp-for="EditBlogViewModel.CoverImage"></label>
        <input type="file" asp-for="EditBlogViewModel.CoverImage" accept=".png,.jpg,.jpeg" multiple>
        <span asp-validation-for="EditBlogViewModel.CoverImage" class="error-message"></span>

    </div>
    <br>

    <textarea rows="18" cols="50"
              name="EditBlogViewModel.Body"
            required>@Model.EditBlogViewModel.Body</textarea>
    <span asp-validation-for="EditBlogViewModel.Body" class="error-message"></span>
    <input type="hidden" value="@Model.EditBlogViewModel.Id" asp-for="EditBlogViewModel.Id"/>
    <input type="submit" value="Save Changes" class="submit-post"/>
</form>
