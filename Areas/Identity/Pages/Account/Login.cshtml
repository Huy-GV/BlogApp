@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["CSSLink"] = "/css/shared.css";
    ViewData["Shared"] = "/css/shared.css";
}


<form id="account" method="post" class="log-in-form">

    <h1>Log in</h1>
    <hr />
    <div asp-validation-summary="All"></div>
    <label asp-for="Input.UserName"></label>
    <input asp-for="Input.UserName" class="text-input" />
    <span asp-validation-for="Input.UserName"></span>
    <br>
    <label asp-for="Input.Password"></label>
    <input asp-for="Input.Password" class="text-input" />
    <span asp-validation-for="Input.Password" class="text-danger"></span>


    <div>
        <label asp-for="Input.RememberMe">
            <input asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>

    <hr />
    <div class="button-container">
        <button type="submit" class="log-in-btn primary-btn">Log in</button>
        <a id="forgot-password" 
            asp-page="./ForgotPassword"  
            class="log-in-btn secondary-btn">Forgot your password?</a>
        <a asp-page="./Register" 
            asp-route-returnUrl="@Model.ReturnUrl"  
            class="log-in-btn secondary-btn">Sign up</a>
    </div>


</form>
